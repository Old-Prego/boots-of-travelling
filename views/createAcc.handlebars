{{!-- Paired with main layout --}}

<div class='form'>
    <form method='post' action='../controllers/api/' id='createAcc' name='createAcc'>
        <div class='row'>
            <div class='columns small-12 medium-12 large-12'>
                <label class='label'> Username
                    <input id="usernameInput" class='credentials' type="text" name="Username" required>
                </label>
            </div>

            <div class='columns small-12 medium-12 large-12'>
                <label class='label'> Password
                    <input id="passwordInput1" class='credentials' type="password" required>
                </label>
            </div>

            <div class='columns small-12 medium-12 large-12'>
                <label class='label'> Re-Enter Password
                    <input id="passwordInput2" class='credentials' type="password" required>
                </label>
            </div>

            <div class='columns small-6 medium-6 large-6'><input class='button' type='submit' value='Create Account'></div>
            <div class='columns small-4 medium-4 large-4'>
                <a id='redir' href='/login' class='label'>Go Back</a>
            </div>
        </div>
    </form>
</div>

<script src="/js/signup.js"></script>